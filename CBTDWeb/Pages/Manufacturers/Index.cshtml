@page
@model CBTDWeb.Pages.Manufacturers.IndexModel
@{
}

<div class="container">
	<div class="row pt=4">   <!--Start Row-->
		<div class="col-6">   
			<h2 class="text-primary">
				Manufacturer List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create New Manufacturer
			</a>
		</div>
	</div>

<table class="table table-bordered table-striped" style="width:100%">
	<thead>
		<tr>
			<th>
				Manufacturer Name
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.objManufacturerList)
		{
			<tr>
				<td width="50%">@obj.Name</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-page="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
						</div>
					</td>

			</tr>
		}
	</tbody>
</table>
</div> <!--close container-->